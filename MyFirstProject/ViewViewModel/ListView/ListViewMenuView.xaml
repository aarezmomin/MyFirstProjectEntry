<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFirstProject.ViewViewModel.ListView.ListViewMenuView"
            Title = "{Binding Title}">
    
    <ContentPage.Content>
        <StackLayout>
            <Button Grid.Row="0"
                   Grid.Column="0"
                   Text="List View With Names"
                   Command="{Binding OnListViewNamesClicked}"/>
            <Button Grid.Row="0"
                   Grid.Column="0"
                   Text="List View With Images"
                   Command="{Binding OnListViewImagesClicked}"/>
            <Button Grid.Row="0"
                   Grid.Column="0"
                   Text="List View With Buttons"
                   Command="{Binding OnListViewButtonsClicked}"/>
            <Button Grid.Row="0"
                   Grid.Column="0"
                   Text="List View With Icons"
                   Command="{Binding OnListViewIconsClicked}"/>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>