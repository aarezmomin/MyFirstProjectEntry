<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFirstProject.ViewViewModel.ListView.ListViewButtons.AddCardView"
             Title = "{Binding Title}">

    <StackLayout Padding="5">
        <Label Text="Card Title"
               FontAttributes="Bold"
               TextColor="Black">
        </Label>

        <Entry Placeholder="Enter Card Title"
               FontSize="Small"
               HorizontalOptions="FillAndExpand"
               Text="{Binding CardText}"
               x:Name="Title">
        </Entry>

        <Button Text="Add"
                Command="{Binding SaveButtonClicked}"
                HorizontalOptions="FillAndExpand"
                BackgroundColor="Maroon"
                TextColor="White"
                x:Name="saveButton">
        </Button>
    </StackLayout>
</ContentPage>